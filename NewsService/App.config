<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="">
                    <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
                    <serviceDebug includeExceptionDetailInFaults="false" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service name="NewsService.NewsServiceWCF">
                <endpoint address="" binding="basicHttpBinding" contract="NewsService.INewsServiceWCF">
                    <identity>
                        <dns value="localhost" />
                    </identity>
                </endpoint>
				<endpoint address="" binding="netTcpBinding" contract="NewsService.INewsServiceWCF">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>
                <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
                <host>
                    <baseAddresses>
                        <add baseAddress="http://localhost/Temporary_Listen_Addresses/news/" />
						<add baseAddress="net.tcp://localhost:3579/news/" />
                    </baseAddresses>
                </host>
            </service>
        </services>
    </system.serviceModel>
</configuration>